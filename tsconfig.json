{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@config/*": ["src/config/*"],
      "@modules/*": ["src/modules/*"],
      "@modules/users/*": ["src/modules/users/*"],
      "@modules/activities/*": ["src/modules/activities/*"],
      "@modules/auth/*": ["src/modules/auth/*"],
      "@modules/categories/*": ["src/modules/categories/*"],
      "@modules/credentials/*": ["src/modules/credentials/*"],
      "@modules/mail/*": ["src/modules/mails/*"],
      "@modules/stripe/*": ["src/modules/stripe/*"],
    },
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "forceConsistentCasingInFileNames": false,
    "noFallthroughCasesInSwitch": false
  }
}
